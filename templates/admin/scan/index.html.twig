{% extends 'admin_base.html.twig' %}


{% block title %} Scan {% endblock %}

{% block body %}

    <div class="row">
        <div class="col-12 py-5">
            <div class="d-flex align-items-center justify-content-between">
                <h1>Liste des chapitres</h1>
                <a href="{{ path('scan_new') }}" class="btn btn-dark">+ Ajouter un scan</a>
            </div>
        </div>

        {% for scan in scans %}
        <div class="col-12 col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>{{ scan.title }}</h5>
                </div>
                <div class="card-body">
                    <img src="{{ asset(scan.image) }}" class="w-100" style="height:300px; object-fit:cover;"/>
                </div>
                <div class="card-footer">
                    <a href="{{ path('scan_edit', {'id': scan.id}) }}" class="btn btn-dark">modifier</a>
                </div>
            </div>
        </div>

        {% endfor %}
        
    </div>
{% endblock %}
